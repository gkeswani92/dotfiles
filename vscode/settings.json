{
  // Editor appearance
  "workbench.editor.enablePreview": false,
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.preferredDarkColorTheme": "Catppuccin Mocha",
  "workbench.preferredLightColorTheme": "Catppuccin Latte",
  "workbench.iconTheme": "material-icon-theme",
  // Editor behavior
  "editor.fontFamily": "JetBrains Mono, monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "normal",
  "editor.fontSize": 15,
  "editor.lineHeight": 22,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.wordWrap": "off",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    120
  ],
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.snippetSuggestions": "top",
  "editor.multiCursorModifier": "alt",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  // Terminal configuration
  "terminal.integrated.fontFamily": "JetBrains Mono, Hack Nerd Font, monospace",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.enableVisualBell": false,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.defaultLocation": "view",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.location": "right",
  "terminal.integrated.tabs.showActiveTerminal": "always",
  "terminal.integrated.persistentSessionReviveProcess": "onExitAndWindowClose",
  "terminal.integrated.enableMultiLinePasteWarning": "always",
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.rightClickBehavior": "selectWord",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "both",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontWeightBold": "bold",
  "terminal.integrated.gpuAcceleration": "auto",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.fastScrollSensitivity": 5,
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "terminal.integrated.commandsToSkipShell": [
    "workbench.action.toggleSidebarVisibility",
    "workbench.action.terminal.focus",
    "workbench.action.terminal.toggleTerminal",
    "workbench.action.terminal.kill",
    "workbench.action.terminal.clear",
    "workbench.action.terminal.selectAll",
    "editor.action.clipboardCopyAction",
    "editor.action.clipboardPasteAction"
  ],
  // File handling
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/.idea": true,
    "**/.vscode": false
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true
  },
  "files.associations": {
    "*.json": "jsonc",
    "*.jsx": "javascriptreact",
    "*.tsx": "typescriptreact"
  },
  // Markdown
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.formatOnSave": true
  },
  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.scrollPreviewWithEditor": true,
  // Git integration
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.fetchOnPull": true,
  "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm",
  "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.views.repositories.location": "scm",
  // Extensions
  "extensions.ignoreRecommendations": false,
  // Search
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/coverage": true,
    "**/.git": true
  },
  "search.useGlobalIgnoreFiles": true,
  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",
  // Miscellaneous
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "debug.console.fontFamily": "JetBrains Mono, Hack Nerd Font",
  "debug.console.fontSize": 13,
  "editor.unicodeHighlight.allowedCharacters": {},
  "editor.stickyScroll.enabled": true,
  "git.openRepositoryInParentFolders": "always",
  "window.newWindowDimensions": "fullscreen",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "rubyLsp.featureFlags": {
    "fullTestDiscovery": true
  }
}
